<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".services.ExplanationFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="توضیحات"
            android:textDirection="rtl"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:fontFamily="@font/estedad"
            android:layout_gravity="right"
            android:layout_margin="16dp"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="64dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="12dp"
            app:cardMaxElevation="24dp"
            android:background="@color/gray"
            >

            <EditText
                android:id="@+id/expl_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textDirection="rtl"
                android:hint="توضیحات مربوط به سفارش خود را اینجا وارد کنید"
                android:fontFamily="@font/estedad"
                />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/explanation_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="30dp"
        android:text="مرحله بعد"
        android:layout_gravity="bottom|left"
        app:icon="@drawable/baseline_arrow_back_24"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:iconTint="@color/white"
        />



    <!-- TODO: Update blank fragment layout -->


</FrameLayout>