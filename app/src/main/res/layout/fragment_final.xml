<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".services.FinalFragment">



        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="12dp"
            app:cardMaxElevation="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/gray"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Final"
                    android:text="سفارش شما"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/exp_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Final"
                    android:text="توضیحات"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/exp_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Final"/>

                <TextView
                    android:id="@+id/ad_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Final"
                    android:text="آدرس"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/addre_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Final"
                    />

                <TextView
                    android:id="@+id/date_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Final"
                    android:text="زمان"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Final"
                    />

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>




    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/final_order_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="30dp"
        android:text="ثبت نهایی"
        android:layout_gravity="bottom|left"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:iconTint="@color/white"
        android:gravity="center"
        />



</FrameLayout>