<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile.ProfileFragment"

    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
            android:elevation="10dp"
            android:background="@color/gr500"
            android:layoutDirection="rtl"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نام و نام خانوادگی"
                android:layout_marginRight="16dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/estedad"
                android:textStyle="bold"
                />

        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mat1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:defaultFocusHighlightEnabled="true"
            android:elevation="2dp"
            app:strokeWidth="1dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="12dp"
            app:cardMaxElevation="24dp"
            android:background="@color/gray"
            >

            <EditText
                android:id="@+id/nach_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/shape_username"
                android:hint="نام"
                android:layout_gravity="center_vertical"
                android:layout_margin="1dp"
                android:fontFamily="@font/estedad"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mat12"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:defaultFocusHighlightEnabled="true"
            android:elevation="2dp"
            app:strokeWidth="1dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="12dp"
            app:cardMaxElevation="24dp"
            android:background="@color/gray"
            >

            <EditText
                android:id="@+id/laskj_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/shape_username"
                android:hint="نام خانوادگی"
                android:layout_gravity="center_vertical"
                android:layout_margin="1dp"
                android:fontFamily="@font/estedad"
                />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>



    <Button
        android:id="@+id/savench"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:text="ذخیره"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:elevation="2dp"
        android:fontFamily="@font/estedad"
        android:stateListAnimator="@animator/button_raise"
        />






</FrameLayout>