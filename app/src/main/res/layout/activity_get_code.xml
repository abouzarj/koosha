<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/cardview_light_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/baseline_lens_24"
                android:layout_marginLeft="-40dp"
                android:layout_marginTop="16dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="کد تایید"
                android:textStyle="bold"
                android:layout_marginRight="18dp"
                android:layout_marginTop="150dp"
                android:layout_alignParentRight="true"
                android:id="@+id/title"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:fontFamily="@font/estedad"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/e_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="5dp"
                android:defaultFocusHighlightEnabled="true"
                android:elevation="2dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_access_time_filled_24"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        />



                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/countdown_text"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"/>

                    <EditText
                        android:id="@+id/code_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/shape_username"
                        android:hint="کد تایید..."
                        android:drawableRight="@drawable/baseline_login_24"
                        android:layout_gravity="center_vertical"
                        android:inputType="number"
                        android:gravity="right|center"
                        />




                </LinearLayout>



            </androidx.cardview.widget.CardView>



            <Button
                android:id="@+id/btn_enter"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:text="ورود"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:elevation="2dp"
                android:stateListAnimator="@animator/button_raise"
                />



        </LinearLayout>







        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/baseline_lens_24"
                android:layout_marginRight="-40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"/>
        </RelativeLayout>






    </LinearLayout>


</ScrollView>